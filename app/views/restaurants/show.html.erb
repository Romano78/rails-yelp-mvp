<div class="container">
  <h2><%= @restaurant.name %></h2>
  <p>Address: <%= @restaurant.address %></p>
  <p>Cuisine: <%= @restaurant.category %></p>

  <% rating = 0 %>
  <% @restaurant.reviews.each do |average_rating| %>
  <% rating += average_rating.rating %>
  <% end %>
  <% rating = rating / @restaurant.reviews.count %>
  <%= rating %>
  <ul>
    <% rating = 0 %>
    <% @restaurant.reviews.each do |rating| %>
     <li>Rating: <%= rating.rating %></li>
     <li>Comment: <%= rating.content %></li>
    <%end%>

  </ul>
</div>
<div class="container">
<p>
<%= link_to "Back to list of restaurant", restaurants_path, :class=>"btn btn-primary" %>
</p>
<p>
<%= link_to "edit restaurant", edit_restaurant_path(@restaurant), :class=>"btn btn-primary" %>
</p>
<p>
<%= link_to "delete restaurant", restaurant_path(@restaurant), :class=>"btn btn-danger", method: :delete %>
<%= link_to "add raiting", new_restaurant_review_path(@restaurant) %>
</p>

</div>
