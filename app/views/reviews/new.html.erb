
<div class="container">
  <h1>New Rating <%= "to: #{@restaurant.name}" %></h1>
  <%= simple_form_for [@restaurant, @review] do |f| %>
    <%= f.input :content %>
    <%= f.input :rating, collection: 0..5 %>
    <%= f.submit "add a rating", class: "btn btn-primary" %>

 <%= link_to "Back to list of restaurant", restaurants_path(@restaurant),:class=>"btn btn-primary"%>
  <% end %>

</div>

